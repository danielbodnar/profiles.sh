---
export const prerender = true;

import Base from "../layouts/Base.astro";
import SearchBox from "../components/SearchBox.astro";
---
<Base title="profiles.sh" description="Generate career persona trading cards from any GitHub profile">
  <main class="landing">
    <div class="landing-content">
      <div class="label">profiles.sh</div>
      <h1>Professional Persona Cards</h1>
      <p class="tagline">Generate career persona trading cards from any GitHub profile</p>
      <SearchBox autofocus />
      <p class="hint">Try: <a href="/danielbodnar">danielbodnar</a></p>
    </div>
  </main>
</Base>

<style>
  .landing {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 24px;
  }

  .landing-content {
    text-align: center;
    max-width: 30rem;
  }

  .label {
    font-size: 0.8125rem;
    font-family: "SF Mono", "Cascadia Code", "Fira Code", Consolas, monospace;
    letter-spacing: 4px;
    text-transform: uppercase;
    color: #444;
    margin-bottom: 8px;
  }

  h1 {
    font-size: 2.25rem;
    font-weight: 200;
    color: #fff;
    letter-spacing: -0.03em;
    margin: 0 0 16px;
  }

  .tagline {
    font-size: 0.875rem;
    color: #555;
    font-family: "SF Mono", "Cascadia Code", "Fira Code", Consolas, monospace;
    margin: 0 0 24px;
  }

  .hint {
    font-size: 0.8125rem;
    color: #444;
    font-family: "SF Mono", "Cascadia Code", "Fira Code", Consolas, monospace;
    margin-top: 16px;
  }

  .hint a {
    color: #666;
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .hint a:hover {
    color: #aaa;
  }
</style>
